<body>  <header>
    <!-- لوگوی کافه -->
    <img src="logo.png" alt="Cafe Logo" />
  </header>  <div class="container">
    <button class="menu-button" onclick="showCategories()">منو</button><div class="categories" id="categories" style="display:none;">
  <button onclick="showItems('hot')">نوشیدنی های گرم</button>
  <button onclick="showItems('cold')">نوشیدنی های سرد</button>
  <button onclick="showItems('herbal')">دمنوش</button>
  <button onclick="showItems('shake')">شیک ها</button>
</div>

<div class="items" id="items"></div>

<div class="admin-panel" id="adminPanel">
  <h3>پنل مدیریت</h3>
  <input type="text" id="newName" placeholder="نام نوشیدنی">
  <input type="text" id="newPrice" placeholder="قیمت">
  <input type="text" id="newImg" placeholder="نام عکس (مثال: hot3.jpg)">
  <select id="newCategory">
    <option value="hot">نوشیدنی گرم</option>
    <option value="cold">نوشیدنی سرد</option>
    <option value="herbal">دمنوش</option>
    <option value="shake">شیک</option>
  </select>
  <button onclick="addItem()">افزودن آیتم جدید</button>
</div>

  </div><button class="toggle" onclick="toggleTheme()">☾</button>

  <script>
    let adminMode = false;

    const data = {
      hot: [
        { name: 'قهوه اسپرسو', price: '80,000', img: 'hot1.jpg' },
        { name: 'کاپوچینو', price: '95,000', img: 'hot2.jpg' }
      ],
      cold: [
        { name: 'آیس لاته', price: '100,000', img: 'cold1.jpg' }
      ],
      herbal: [
        { name: 'دمنوش نعناع', price: '70,000', img: 'herbal1.jpg' }
      ],
      shake: [
        { name: 'شیک شکلات', price: '120,000', img: 'shake1.jpg' }
      ]
    };

    function showCategories() {
      document.getElementById('categories').style.display = 'block';
      document.getElementById('items').innerHTML = '';
    }

    function showItems(type) {
      const itemsDiv = document.getElementById('items');
      itemsDiv.innerHTML = '';
      data[type].forEach((item, index) => {
        itemsDiv.innerHTML += `
          <div class="item">
            <img src="${item.img}" />
            <div>${item.name}</div>
            <div class="price">${item.price} تومان</div>
            ${adminMode ? `<input type='text' value='${item.price}' oninput='changePrice("${type}", ${index}, this.value)' />` : ''}
          </div>`;
      });
    }

    function toggleTheme() {
      document.body.classList.toggle('dark');
    }

    // پنل مدیریت
    function toggleAdmin() {
      adminMode = !adminMode;
      document.getElementById('adminPanel').style.display = adminMode ? 'block' : 'none';
      // دوباره آیتم‌ها را رندر کن تا فیلد قیمت نمایش داده شود
      ['hot','cold','herbal','shake'].forEach(category => showItems(category));
    }

    function changePrice(category, index, value) {
      data[category][index].price = value;
      showItems(category);
    }

    function addItem() {
      const name = document.getElementById('newName').value;
      const price = document.getElementById('newPrice').value;
      const img = document.getElementById('newImg').value;
      const category = document.getElementById('newCategory').value;
      if(name && price && img) {
        data[category].push({name, price, img});
        showItems(category);
        document.getElementById('newName').value = '';
        document.getElementById('newPrice').value = '';
        document.getElementById('newImg').value = '';
      }
    }

    // برای ورود به پنل Admin (روی دسکتاپ دو بار کلیک روی لوگو)
    document.querySelector('header img').ondblclick = toggleAdmin;
  </script></body>
</html>
